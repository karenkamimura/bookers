<div class="body">
 <div class="container">
  <div class="row">
  	<div class="col-md-6 col-md-offset-3">
		 <h1>Editing Book</h1>
     <%= form_for(@book) do |f| %>

      <div class="field row">
        <label for="book_title">Title</label>
      <%= f.text_field :title, class: "book_title" %>
     </div>

     <div class="field row">
      <label for="book_opinion">Opinion</label>
    	<%= f.text_area :body, class: "book_body" %>
     </div>
     <div class="acttion row">
      <%= f.submit 'update book', class: "btn btn-primary" %>
      </div>
     <% end %>


     <%= link_to "Show", book_path(@book.id), class: "book_#{@book.id}" %>|
     <%= link_to "Back", books_path(@book.id), class: "back" %>
 　　　</div>
    <div class="col-md-3"></div>
　　　</div>
  </div>
 </div>