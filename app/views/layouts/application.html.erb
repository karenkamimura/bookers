<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header class="navbar navbar-fixed-top navbar-inverse">
     <div class="container">
       <nav class="nav navbar-nav navbar-left">
       <span>Bookers</span>
     </nav>
     <nav>

      <ul class="nav navbar-nav navbar-right">
     <% if user_signed_in? %>

      <li class="">
        <%= link_to 'home', user_path(current_user.id),class: "home fas fa-home"  %>
        </li>
      <li class="">
        <%= link_to 'Users', users_path, class: "users fas fa-user" %>
      </li>
      <li class="">
        <%= link_to 'Books', books_path, class: "books fas fa-book" %>
      </li>
      <li class="">
        <%= link_to "logout", destroy_user_session_path, method: :delete, class: "logout fas fa-sign-out-alt" %>
      </li>
      <% else %>
      <li class="">
        <%= link_to 'home', root_path, class: "home fas fa-home" %>
        </li>
        <li class="">
        <%= link_to 'about', about_path, class: "about fas fa-eject" %>
        </li>
      <li class="">
         <%= link_to "sign up", new_user_registration_path, class: "sign_up fas fa-user-plus" %>
      </li>
      <li class="">
        <%= link_to "log in", new_user_session_path, class: "sign_in fas fa-sign-in-alt" %>
      </li>
       <% end %>
     </ul>
    </nav>
  </div>
</header>
<div class="body">
  <div class="container">
    <div class="row">
      <%= yield %>

    </div>
  </div>
</div>
</body>
</html>
