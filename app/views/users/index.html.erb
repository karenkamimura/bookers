<%= render 'users/list', user: @user, book: @book %>
  <div class="col-xs-9">
    <h2>User</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
         <% @book_user.each do |user| %>
         <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "user_image", format: 'jpeg', fallback: "no_image.jpg" %></td>
          <td><%= user.username %></td>
          <td><%= link_to 'show' , user_path(user.id), class: "user_#{user.id}" %></td>
         <% end %>
         </tr>
       </tbody>
     </table>
    </div>
